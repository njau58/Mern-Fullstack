    <h3>Reset password for <%=email%></h3>
    <form action="" method="POST">
        <% if(error){ %>
            <p style="color: red; margin-top: -5px;display: flex;justify-self: center; margin-bottom: 10px;"><%=error%></p>
          <% } else{ %>  
 
         <% } %>
        <label for="password">Password</label><br>
        <input required type="password" name="password" id="password"><br><br>
        <label for="password"> Confirm Password</label><br>
        <input required type="password" name="confirmPassword" id="confirmPassword"><br><br>
        <input style="margin: 0 30px;" type="submit" value="reset password">



    </form>
    </div>
</body>
</html>